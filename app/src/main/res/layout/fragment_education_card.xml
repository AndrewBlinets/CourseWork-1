<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/paddingTopLinearLayoutOnEducationCard">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/heigthImageFoto"
            android:src="@drawable/q1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/surName"
            android:textSize="@dimen/textSizeStudentCard"
            android:layout_margin="@dimen/marginForTextOnStudentCard"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/firstName"
            android:textSize="@dimen/textSizeStudentCard"
            android:layout_margin="@dimen/marginForTextOnStudentCard"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/secondName"
            android:gravity="center"
            android:textSize="@dimen/textSizeStudentCard"
            android:layout_margin="@dimen/marginForTextOnStudentCard"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/groupNumber"
            android:gravity="center"
            android:textSize="@dimen/textSizeStudentCard"
            android:layout_margin="@dimen/marginForTextOnStudentCard"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>